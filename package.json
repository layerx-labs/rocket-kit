{
  "version": "0.1.13",
  "description": "TAIKAI Design System",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/taikai/taikai-design-system.git"
  },
  "keywords": [
    "react",
    "design-system",
    "taikai",
    "design",
    "component library"
  ],
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "storybook": "start-storybook -s ./static -p 6006 --no-manager-cache",
    "build-storybook": "build-storybook -s ./static",
    "chromatic": "dotenv cross-var npx chromatic --project-token %CHROMATIC_PROJECT_TOKEN%"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint && npm run test"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "arrowParens": "avoid"
  },
  "name": "@taikai/taikai-design-system",
  "author": "taikai",
  "module": "dist/taikai-design-system.esm.js",
  "size-limit": [
    {
      "path": "dist/taikai-design-system.cjs.production.min.js",
      "limit": "30 KB"
    },
    {
      "path": "dist/taikai-design-system.esm.js",
      "limit": "30 KB"
    }
  ],
  "devDependencies": {
    "@babel/core": "^7.12.16",
    "@size-limit/preset-small-lib": "^4.9.1",
    "@storybook/addon-a11y": "^6.1.18",
    "@storybook/addon-controls": "^6.1.18",
    "@storybook/addon-essentials": "^6.1.18",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-links": "^6.1.18",
    "@storybook/addons": "^6.1.18",
    "@storybook/react": "^6.1.18",
    "@storybook/theming": "^6.1.18",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.2",
    "@testing-library/user-event": "^12.7.1",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@types/styled-components": "^5.1.4",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "chromatic": "^5.6.3",
    "cross-var": "^1.1.0",
    "dotenv-cli": "^4.0.0",
    "husky": "^4.3.5",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-is": "^17.0.1",
    "size-limit": "^4.9.1",
    "tsdx": "^0.14.1",
    "tslib": "^2.0.3",
    "typescript": "^4.1.5"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "dependencies": {
    "polished": "^4.1.1",
    "styled-components": "^5.2.1"
  }
}
